{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "itsm.major.incident.l3l4.escalation context",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "request_id": {
      "type": "string"
    },
    "domain": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "severity": {
      "type": "string",
      "enum": [
        "SEV0",
        "SEV1",
        "SEV2",
        "SEV3",
        "SEV4",
        "UNKNOWN"
      ]
    },
    "incident_start_utc": {
      "type": "string",
      "description": "ISO-8601 timestamp in UTC"
    },
    "current_status": {
      "type": "string",
      "enum": [
        "investigating",
        "identified",
        "mitigating",
        "monitoring",
        "resolved",
        "unknown"
      ]
    },
    "services_affected": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "customer_impact": {
      "type": "string"
    },
    "blast_radius": {
      "type": "string"
    },
    "symptoms": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "recent_changes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "environment": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "platform": {
          "type": "string",
          "description": "e.g., AWS, GCP, Azure, on-prem, hybrid"
        },
        "regions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "clusters": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "network_boundary_notes": {
          "type": "string"
        }
      }
    },
    "telemetry": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "metrics_available": {
          "type": "boolean"
        },
        "logs_available": {
          "type": "boolean"
        },
        "traces_available": {
          "type": "boolean"
        },
        "dashboards_links": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "known_gaps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "change_freeze": {
          "type": "boolean"
        },
        "compliance_notes": {
          "type": "string"
        },
        "risk_tolerance": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high",
            "unknown"
          ]
        },
        "engineering_bandwidth": {
          "type": "string",
          "enum": [
            "none",
            "limited",
            "available",
            "unknown"
          ]
        }
      }
    },
    "stakeholders": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "incident_commander": {
          "type": "string"
        },
        "communications_lead": {
          "type": "string"
        },
        "l3_oncall": {
          "type": "string"
        },
        "l4_platform": {
          "type": "string"
        },
        "security_oncall": {
          "type": "string"
        },
        "data_oncall": {
          "type": "string"
        }
      }
    },
    "vendors": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "runbooks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "cmdb_assets": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "sla_slo": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "sla_name": {
          "type": "string"
        },
        "slo_targets": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "error_budget_status": {
          "type": "string"
        }
      }
    },
    "procurement_context": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "contracts_in_place": {
          "type": "boolean"
        },
        "preferred_vendors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "lead_time_days_estimate": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}